library(gsheet)
mydataset <- gsheet2tbl("https://docs.google.com/spreadsheets/d/1QMRxuVuvDDtsjIs8SrfJQc6NyZIXUwumXB68QJsOU5A/edit?usp=sharing")
# Show first 6 lines of the dataset
head(mydataset)

# Loading the ggplot2 and the ggthemes libraries
library(ggplot2)
library(ggthemes)
library(gsheet)

# Load the leaflet library and display some data
library(leaflet)
head(mydataset)

# Load information regarding cluster
mydataset <- addCircleMarkers(radius=mydataset$e2, color="purple", addTiles(leaflet(data = mydataset)))
mydataset

# Black and white style
mydataset %>% addProviderTiles("Stamen.Toner")
